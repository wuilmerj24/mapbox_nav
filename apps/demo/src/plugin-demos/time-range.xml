<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:tr="@arepa/time-range" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="time-range" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
      <tr:TimeRange 
        drag="onDrag" 
        timeChange="onTime" 
        loaded="onLoad" 
        startTime="10" 
        endTime="12" 
        sliderColor="blue" 
        clockLabelColor="green"
        clockTickColor="cyan"
        maxDurationMinutes="1"
        sliderRangeColor="yellow"
        thumbColor="black"
        sliderRangeGradientEnd="#ccc"
        sliderRangeGradientMiddle="red"
        sliderRangeGradientStart="blue"
        timeStepMinutes="1"
        clockVisible="true"
        clockLabelSize="20"
        sliderWidth="10"
        thumbIconSize="100"
        thumbSize="100"
        thumbIconStartRes="icon"
        thumbIconEndRes="icon"

        clockFace="APPLE"
        hourFormat="FORMAT_SYSTEM"
      />
    </StackLayout>
</Page>